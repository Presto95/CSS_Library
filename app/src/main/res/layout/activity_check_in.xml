<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp">

    <Spinner
        android:id="@+id/spin_type"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:entries="@array/type"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/linearLayout" />
    <Button
        android:id="@+id/btn_browse"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="검색"
        android:textSize="20sp"
        android:layout_above="@+id/linearLayout"
        android:layout_alignParentTop="true"
        android:textColor="#000000"
        android:background="@drawable/buttonshape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="10"/>
    <EditText
        android:id="@+id/edit_keyword"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="검색 키워드를 입력하세요"
        android:layout_alignParentTop="true"
        android:visibility="invisible"
        android:singleLine="true"
        android:layout_toRightOf="@id/spin_type"
        android:layout_toLeftOf="@id/btn_browse"/>
    <Spinner
        android:id="@+id/spin_keyword"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:layout_toLeftOf="@id/btn_browse"
        android:layout_toRightOf="@id/spin_type"
        android:layout_above="@+id/linearLayout"
        android:layout_alignParentTop="true"
        android:entries="@array/type_array"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/edit_keyword"
        android:id="@+id/linearLayout"
        android:orientation="vertical">
        <TextView
            android:id="@+id/text_checkin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="30dp"
            android:textAlignment="center"/>

        <ListView
            android:id="@+id/list_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </ListView>
    </LinearLayout>
</RelativeLayout>
